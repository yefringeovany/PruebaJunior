@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-3 text-primary">Bienvenidos a Mi Sistema</h1>
        <p class="lead">Explora y gestiona tus Clientes, Empleados, Departamentos, Productos y Ventas.</p>
        <a class="btn btn-lg btn-success shadow-sm" asp-controller="Clientes" asp-action="Index">
            <i class="bi bi-people-fill"></i> Comenzar
        </a>
    </div>

    <div class="row g-4">
        <!-- Card Clientes -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-1 text-primary mb-3"></i>
                    <h5 class="card-title">Clientes</h5>
                    <p class="card-text">Gestiona tus clientes de manera rápida y eficiente.</p>
                    <a class="btn btn-outline-primary" asp-controller="Clientes" asp-action="Index">Ver Clientes</a>
                </div>
            </div>
        </div>

        <!-- Card Empleados -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge-fill display-1 text-success mb-3"></i>
                    <h5 class="card-title">Empleados</h5>
                    <p class="card-text">Visualiza y administra toda la información de tus empleados.</p>
                    <a class="btn btn-outline-success" asp-controller="Empleadoes" asp-action="Index">Ver Empleados</a>
                </div>
            </div>
        </div>

        <!-- Card Departamentos -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-building display-1 text-warning mb-3"></i>
                    <h5 class="card-title">Departamentos</h5>
                    <p class="card-text">Gestiona los departamentos y sus presupuestos fácilmente.</p>
                    <a class="btn btn-outline-warning" asp-controller="Departamentoes" asp-action="Index">Ver Departamentos</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <!-- Card Productos -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam display-1 text-info mb-3"></i>
                    <h5 class="card-title">Productos</h5>
                    <p class="card-text">Administra tu inventario y productos disponibles.</p>
                    <a class="btn btn-outline-info" asp-controller="Productoes" asp-action="Index">Ver Productos</a>
                </div>
            </div>
        </div>

        <!-- Card Ventas -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-cash-stack display-1 text-danger mb-3"></i>
                    <h5 class="card-title">Ventas</h5>
                    <p class="card-text">Consulta y gestiona todas las ventas registradas.</p>
                    <a class="btn btn-outline-danger" asp-controller="Ventums" asp-action="Index">Ver Ventas</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.15);
        }
</style>
